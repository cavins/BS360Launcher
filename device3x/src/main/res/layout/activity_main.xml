<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:my="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/quick_set_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/quick_set_arrow"
        android:layout_gravity="center"
        android:background="#00000000"/>

    <me.kaelaela.verticalviewpager.VerticalViewPager
        android:id="@+id/vertical_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></me.kaelaela.verticalviewpager.VerticalViewPager>

</LinearLayout>
